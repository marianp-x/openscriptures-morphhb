  <xs:simpleType name="OsisWordIdType">
    <xs:restriction base="xs:string">
      <xs:pattern value="\d{2}[a-zA-Z0-9]{3}"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="VersePathType">
    <xs:restriction base="xs:string">
      <xs:pattern value="\d+/\d+"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="WordPartLemmaType">
    <xs:restriction base="xs:string">
      <xs:pattern value="([bdicklms]|\d{1,4}( [a-f])?\+?)"/>      <!-- TODO: Double-check the '+' use -->
    </xs:restriction>
  </xs:simpleType>

